<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mapFragment">

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.tatpol.locationnoteapp.presentation.map.MapFragment"
        android:label="MapFragment"
        tools:layout="@layout/fragment_map" />
    <fragment
        android:id="@+id/noteListFragment"
        android:name="com.tatpol.locationnoteapp.presentation.note_list.NoteListFragment"
        android:label="NoteListFragment"
        tools:layout="@layout/fragment_note_list">
        <action
            android:id="@+id/action_noteListFragment_to_mapFragment"
            app:destination="@id/mapFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/mapFragment"
            app:popUpToInclusive="false"
            app:restoreState="true" />
        <action
            android:id="@+id/action_noteListFragment_to_createEditFragment"
            app:destination="@id/createEditFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/mapFragment"
            app:popUpToInclusive="false"
            app:restoreState="true" />
    </fragment>
    <fragment
        android:id="@+id/createEditFragment"
        android:name="com.tatpol.locationnoteapp.presentation.create_edit.CreateEditFragment"
        android:label="CreateEditFragment"
        tools:layout="@layout/fragment_create_edit" />

</navigation>